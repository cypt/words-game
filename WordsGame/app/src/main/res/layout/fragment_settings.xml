<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Слова будут показаны" />

            <RadioButton
                android:id="@+id/all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/one_by_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/difficult_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/newbie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Новичек (10 слов, 2 минуты)" />

            <RadioButton
                android:id="@+id/advanced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Опытный (25 слов, 3 минуты)" />

            <RadioButton
                android:id="@+id/caesar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Цезарь (25 слов, 2 минуты)" />

            <RadioButton
                android:id="@+id/sherlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Шерлок (35 слов 2 минуты)" />

            <RadioButton
                android:id="@+id/custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Настроить количество и время самому" />

        </RadioGroup>

        <Button
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Начать"
            android:onClick="start"/>

    </LinearLayout>

</RelativeLayout>